{
  "deno.enable": true,
  "deno.unstable": true,
  "deno.importMap": "./.supabase/import_map.json",
  "deno.enablePaths": [
    "./supabase/functions"
  ],
  "deno.lint": true,
  "deno.suggest.imports.hosts": {
    "https://deno.land": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "kiroAgent.configureMCP": "Enabled",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font", // Certifique-se que esta fonte está instalada
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.showExitAlert": false,
  // Recomendo definir seu terminal padrão para Windows (ex: PowerShell, Git Bash, etc.)
  "terminal.integrated.defaultProfile.windows": "Git Bash",
}
